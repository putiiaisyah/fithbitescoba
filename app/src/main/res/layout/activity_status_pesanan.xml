<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusPesanan">

    <ImageView
        android:id="@+id/imglogorincianpesanan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        android:layout_marginEnd="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/pesanandikirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesananan Dikirim!"
        android:fontFamily="@font/readex_boldd"
        android:textColor="@color/ijo"
        android:textSize="20sp"
        android:layout_marginStart="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp" />

    <TextView
        android:id="@+id/statuspesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status Pesanan : "
        android:fontFamily="@font/readex_boldd"
        android:textColor="@color/ijo"
        android:textSize="18sp"
        android:layout_marginEnd="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"  />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dalam Perjalanan"
        android:fontFamily="@font/readex_boldd"
        android:textColor="@color/ijo"
        android:textSize="18sp"
        android:layout_marginStart="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/perjalananpesanan"
        android:layout_marginTop="250dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtsubtotalpembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal Pembayaran"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="185dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txthargasubtotalpembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 82.000"
            android:layout_marginTop="70dp"
            android:layout_marginStart="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txtsubtotalpengiriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal Pengiriman"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="192dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txthargapengiriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 30.000"
            android:layout_marginTop="100dp"
            android:layout_marginStart="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txtbiayalayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biaya Layanan"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="230dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txthbiayalayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 2.000"
            android:layout_marginTop="130dp"
            android:layout_marginStart="257dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txttotalpesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Pesanan"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="222dp"
            android:fontFamily="@font/readex_boldd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txthargatotalpesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 114.000"
            android:textColor="@color/yellow"
            android:layout_marginTop="170dp"
            android:layout_marginStart="235dp"
            android:fontFamily="@font/readex_boldd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txtmetodepembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metode Pembayaran"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="175dp"
            android:fontFamily="@font/readex_boldd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/txtbayarpakeapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BCA"
            android:textColor="@color/yellow"
            android:layout_marginTop="210dp"
            android:layout_marginStart="287dp"
            android:fontFamily="@font/readex_boldd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/readex_boldd"
            android:text="Berikan Ulasan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="350dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imgpembayaranselesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bgbawah_detailproduk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="640dp" />

    <!-- Bottom Navigation Padding -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigasi"
        app:itemIconTint="@color/ijo"
        app:itemTextColor="@color/ijo"
        app:labelVisibilityMode="labeled"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>




</androidx.constraintlayout.widget.ConstraintLayout>