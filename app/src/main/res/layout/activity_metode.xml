<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Metode">

    <TextView
        android:id="@+id/textmetode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode Pembayaran"
        android:textColor="@color/ijo"
        android:fontFamily="@font/readex_boldd"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageButton
        android:id="@+id/bgbca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="bg"
        android:background="@android:color/transparent"
        android:src="@drawable/bg_metode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textmetode" />


    <ImageView
        android:id="@+id/imgviewbca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bca"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="16dp" />



    <Button
        android:id="@+id/buttonKonfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/readex_boldd"
        android:text="Konfirmasi"
        android:contentDescription="Confirm button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="15dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TextView Nomor Rekening -->
        <TextView
            android:id="@+id/txtnomerrekening"
            android:layout_width="136dp"
            android:layout_height="30dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="135dp"
            android:fontFamily="@font/readex_boldd"
            android:text="Nomor Rekening : "
            android:textColor="@color/abu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- TextView Nomor Rekening Detail -->
        <TextView
            android:id="@+id/txtnorek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8029 9012 9031 2291"
            android:fontFamily="@font/readex_boldd"
            app:layout_constraintTop_toBottomOf="@id/txtnomerrekening"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="130dp" />

        <!-- TextView Atas Nama PT -->
        <TextView
            android:id="@+id/txtviewpt"
            android:textColor="@color/abu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a/n PT. Binary Bites"
            android:fontFamily="@font/readex_boldd"
            app:layout_constraintTop_toBottomOf="@id/txtnorek"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="130dp" />

        <ImageButton
            android:id="@+id/btnsalin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="btn salin"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btnsalin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="160dp"
            android:layout_marginStart="260dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>