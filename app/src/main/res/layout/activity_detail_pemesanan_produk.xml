<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DetailPemesananProduk">

        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Back Button"
            android:minHeight="48dp"
            android:minWidth="48dp" />

        <ImageView
            android:id="@+id/imglogorincianpesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_fishbites"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="180dp" />

        <TextView
            android:id="@+id/txtfishbitesrincian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/readex_boldd"
            android:text="Fish Bites"
            android:textSize="13sp"
            android:textColor="@color/ijo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="95dp"
            android:layout_marginTop="190dp" />

        <!-- Title Text -->
        <TextView
            android:id="@+id/txtdetailpemesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Pemesanan Produk"
            android:textColor="@color/ijo"
            android:fontFamily="@font/readex_boldd"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/backbutton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DetailPemesananProduk">

            <ImageView
                android:id="@+id/bgalamatdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_keranjang"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="35dp"
                android:layout_marginTop="80dp" />

            <ImageView
                android:id="@+id/imglocation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/location"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="290dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txtalamatpengiriman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Pengiriman"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="195dp"
                android:fontFamily="@font/readexpro_medium"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtnamarincianpesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adinda Rahmawati"
                android:textColor="@color/white"
                android:fontFamily="@font/readexpro_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtalamatpengiriman"
                android:layout_marginStart="45dp" />

            <TextView
                android:id="@+id/txtalamatnotelp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="08123456789\nGriya Sawangan Asri, No 24, Rt.8/Rw9, Bubulak, \nKota Bogor, Jawa Barat, ID 16511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtnamarincianpesanan"
                android:layout_marginStart="45dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_detail_pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="240dp">

            <ImageView
                android:id="@+id/bgdetailpesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:src="@drawable/bgrincianpesanan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/imgdetailpesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ikan_gurame"
                app:layout_constraintTop_toTopOf="@+id/bgdetailpesanan"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtnamadetailpesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ikan Gurame 1kg"
                android:textColor="@color/white"
                android:fontFamily="@font/readexpro_medium"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgdetailpesanan" />

            <TextView
                android:id="@+id/txthargadetailpesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 50.000"
                android:layout_marginEnd="140dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/readexpro_light"
                android:textColor="@color/yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtnamadetailpesanan" />

            <TextView
                android:id="@+id/txtbanyakpesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X1"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/readexpro_light"
                android:textColor="@color/yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtnamadetailpesanan" />

            <!-- pesanan ke-2 !-->

            <ImageView
                android:id="@+id/bgdetailpesanan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/bgrincianpesanan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/imgdetailpesanan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ikan_patin"
                app:layout_constraintTop_toTopOf="@+id/bgdetailpesanan"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtnamadetailpesanan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ikan Patin Utuh Bersih 1kg"
                android:textColor="@color/white"
                android:fontFamily="@font/readexpro_medium"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgdetailpesanan2" />

            <TextView
                android:id="@+id/txthargadetailpesanan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 50.000"
                android:layout_marginEnd="140dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/readexpro_light"
                android:textColor="@color/yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtnamadetailpesanan2" />

            <TextView
                android:id="@+id/txtbanyakpesanan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X1"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/readexpro_light"
                android:textColor="@color/yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtnamadetailpesanan2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/bgpesanutkpenjual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_pesanutkpenjual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="450dp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/txtpesanutkpenjual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan untuk penjual"
            android:textColor="@color/white"
            android:fontFamily="@font/readexpro_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="460dp"
            android:textSize="14sp"
            android:layout_marginStart="25dp"/>

        <EditText
            android:id="@+id/edittexttingglakapesan"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="tinggalkan pesan"
            android:textSize="14sp"
            android:layout_marginTop="445dp"
            android:fontFamily="@font/readexpro_light"
            android:textColor="@color/white"
            android:layout_marginStart="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/bgmetodepembyrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bg_pesanutkpenjual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="500dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/txtmetodepembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metode Pembayaran"
            android:textColor="@color/white"
            android:fontFamily="@font/readexpro_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="510dp"
            android:textSize="14sp"
            android:layout_marginStart="25dp"/>

        <!-- Spinner untuk memilih metode pembayaran -->
        <Spinner
            android:id="@+id/spinnerMetodePembayaran"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="500dp"
            android:layout_marginStart="330dp" />

        <!-- TextView untuk menampilkan kode FA setelah memilih BCA -->
        <TextView
            android:id="@+id/txtKodeFA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234556"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinnerMetodePembayaran"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"/>


        <ImageView
            android:id="@+id/bguploadtransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bg_pesanutkpenjual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="550dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/txtuploadtransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bukti Pembayaran"
            android:textColor="@color/white"
            android:fontFamily="@font/readexpro_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="560dp"
            android:textSize="14sp"
            android:layout_marginStart="25dp"/>

        <Button
            android:id="@+id/btnUploadFile"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="550dp"
            android:backgroundTint="@color/ijo"
            android:text="Upload bukti"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="600dp"
            android:src="@drawable/bg_co"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/readexpro_medium"
            android:text="Sub Harga"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView7" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/readexpro_medium"
            android:text="Rp. 100.000"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/readexpro_medium"
            android:text="Biaya Layanan"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="35dp"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/readexpro_medium"
            android:text="Rp. 2.000"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="35dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/readex_boldd"
            android:text="------------------------"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/readexpro_medium"
            android:text="Total Harga"
            android:textColor="@color/white"
            android:layout_marginStart="35dp"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/readexpro_medium"
            android:text="Rp. 102.000"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/readex_boldd"
            android:text="Check Out"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>

